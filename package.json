{
  "name": "handlebars-wax",
  "version": "4.0.0",
  "description": "Effortless wiring of Handlebars data, partials, helpers, and decorators.",
  "main": "src/handlebars-wax.js",
  "scripts": {
    "coveralls": "nyc report -r text-lcov | coveralls",
    "pretest": "xo src/*.js test/*.js",
    "test": "nyc -r html -r text ava -v test/*.js",
    "watch": "watch 'npm test' src test -du --wait=5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonmoeller/handlebars-wax.git"
  },
  "keywords": [
    "handlebars",
    "hbs",
    "hb",
    "glob",
    "globby",
    "register",
    "data",
    "partials",
    "helpers",
    "decorators"
  ],
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shannonmoeller/handlebars-wax/issues"
  },
  "homepage": "https://github.com/shannonmoeller/handlebars-wax",
  "dependencies": {
    "object-assign": "^4.0.1",
    "require-glob": "^3.1.1"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "coveralls": "^2.11.9",
    "handlebars": "^4.0.5",
    "nyc": "^6.4.0",
    "watch": "^0.17.1",
    "xo": "^0.14.0"
  },
  "engines": {
    "node": ">= 0.12"
  },
  "xo": {
    "rules": {
      "brace-style": [
        2,
        "stroustrup"
      ],
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "no-eq-null": 0,
      "object-curly-spacing": [
        2,
        "always"
      ],
      "operator-linebreak": [
        2,
        "before"
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
